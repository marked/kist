#!/usr/bin/perl
use warnings;
use strict;

my $ROOT;
BEGIN {
  my (@dirs) = split "/", $0 ;
  pop(@dirs);
  if (readlink($0)) {
    push(@dirs,split "/", readlink($0)) ;
    pop(@dirs);
  }
  $ROOT = join( "/", @dirs);
}
use lib $ROOT;

use Common;
use Conf;

my $fid = "";

my $nums = 0;
my $other = 0;
foreach my $a (@ARGV) {
  if ($a =~ m/^[0-9]+$/) {
    $nums++;
    $fid = $a;
  } else {
    $other++;
    $IP = $a;
  }
}

if ( !($nums >0 && $nums <= 1 && $other <= 1)  ) {
  die "Usage: $0 [HostDVR] <fileID> \n";
}

my $fetch_cmd = "curl -u tivo:$MAK -k --digest -b'sid=$SID' 'https://$IP$detail_xml_path$fid'";
my $post_cmd = "$BIN_DIR/post_filters/pretty";

my $xml = `$fetch_cmd  | $post_cmd`;
print $xml;
